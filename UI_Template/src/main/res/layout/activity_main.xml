<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:huawaii="http://schemas.android.com/apk/res/com.sloop.topbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sloop.topbar.MainActivity" >

    <com.sloop.view.TopBar
        android:minHeight="48dp"
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        huawaii:TB_leftBackground="@drawable/blue_button"
        huawaii:TB_leftText="左侧"
        huawaii:TB_titleTextSize="8sp"
        huawaii:TB_rightBackground="@drawable/blue_button"
        huawaii:TB_rightText="右侧"
        huawaii:TB_titleText="自定义标题"
        huawaii:TB_titleTextColor="#ffffff" >
    </com.sloop.view.TopBar>

</RelativeLayout>